    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "electron-is-dev": "3.0.1",
    "express": "^4.21.2",
    "lucide-react": "^0.475.0",
    "next": "14.2.3",
    "react": "^18",
    "react-day-picker": "8.10.1",
    "react-dom": "^18",
    "react-redux": "^9.2.0",
